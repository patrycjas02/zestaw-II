#include <iostream>
#include <math.h>

using namespace std;

int main (){

    double x1,y1,r1,x2,y2,r2;
    cout<< "Podaj pierwsza wspolrzedna pierwszego kola: ";
    cin>>x1;
    cout<< "Podaj druga wspolrzedna pierwszego kola: ";
    cin>>y1;
    cout<< "Podaj dlugosc promienia pierwszego kola: ";
    cin>>r1;
    cout<< "Podaj pierwsza wspolrzedna drugiego kola: ";
    cin>>x2;
    cout<< "Podaj druga wspolrzedna drugiego kola: ";
    cin>>y2;
    cout<< "Podaj dlugosc promienia drugiego kola: ";
    cin>>r2;

    double d = sqrt((pow(x1-x2,2))+(pow(y1-y2,2)));

    if (d>r1+r2){
        cout<<endl<<"Kola maja puste przeciecie"<<endl;
    }
    else {
        cout<<endl<<"Kola maja czesc wspolna"<<endl;
    }

return 0;
}
